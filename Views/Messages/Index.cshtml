@model IEnumerable<TicketManagementSystem.Models.Message>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>My Messages</h1>

<p>
    <a class="btn btn-primary mb-3"  asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Subject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Body)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.timestampsend)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sender)
            </th>
          
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Subject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Body)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.timestampsend)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sender.Id)
            </td>
                        <td>
                    <a class="btn btn-primary mb-3" asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
                    <a class="btn btn-success mb-3" asp-action="Details" asp-route-id="@item.Id">Details</a> 
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
