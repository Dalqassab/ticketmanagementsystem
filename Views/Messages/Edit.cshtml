@model TicketManagementSystem.Models.Message

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Message</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Subject" class="control-label"></label>
                <input asp-for="Subject" class="form-control" />
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Body" class="control-label"></label>
                <input asp-for="Body" class="form-control" />
                <span asp-validation-for="Body" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="timestampsend" class="control-label"></label>
                <input asp-for="timestampsend" class="form-control" />
                <span asp-validation-for="timestampsend" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="senderId" class="control-label"></label>
                <select asp-for="senderId" class="form-control" asp-items="ViewBag.senderId"></select>
                <span asp-validation-for="senderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="receiverID" class="control-label"></label>
                <select asp-for="receiverID" class="form-control" asp-items="ViewBag.receiverID"></select>
                <span asp-validation-for="receiverID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
