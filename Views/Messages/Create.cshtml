@model TicketManagementSystem.Models.Message

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<hr />
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header text-white" style="background-color:#ffdab9">
                    <h3 class="card-title">Write a Message</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Subject" class="control-label"></label>
                            <input asp-for="Subject" class="form-control" />
                            <span asp-validation-for="Subject" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Body" class="control-label"></label>
                            <textarea asp-for="Body" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Body" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="timestampsend" class="control-label"></label>
                            <input asp-for="timestampsend" class="form-control" />
                            <span asp-validation-for="timestampsend" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="senderId" class="control-label"></label>
                            <select asp-for="senderId" class="form-control" asp-items="ViewBag.senderId"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="receiverID" class="control-label"></label>
                            <select asp-for="receiverID" class="form-control" asp-items="ViewBag.receiverID"></select>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
