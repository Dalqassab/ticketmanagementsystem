@model TicketManagementSystem.Models.Message

@{
    ViewData["Title"] = "Reply";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Message</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Reply">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group" style="display:none">
                <label asp-for="Subject" class="control-label"></label>
                <input asp-for="Subject" class="form-control" />
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Body" class="control-label"></label>
                <textarea id="Body" name="Body" class="form-control" rows="5" cols="30"></textarea>
                <span asp-validation-for="Body" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none">
                <label asp-for="Timestampsend" class="control-label"></label>
                <input asp-for="Timestampsend" class="form-control" />
                <span asp-validation-for="Timestampsend" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none">
                <label asp-for="ReceiverID" class="control-label"></label>
                <input asp-for="ReceiverID" class="form-control" asp-items="ViewBag.SenderId">
                <span asp-validation-for="ReceiverID" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none">
                <label asp-for="SenderId" class="control-label"></label>
                <input asp-for="SenderId" class="form-control" asp-items="ViewBag.ReceiverID">
                <span asp-validation-for="SenderId" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <input type="submit" value="Send" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a class="btn btn-info" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}