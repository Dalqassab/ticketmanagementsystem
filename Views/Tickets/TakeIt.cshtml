@model TicketManagementSystem.Models.Ticket

@{
    ViewData["Title"] = "UpdateStatus";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Create Ticket</h3>
<hr />
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header text-white" style="background-color:#ffdab9">
                    <h3 class="card-title">Create Ticket</h3>
                </div>
                <div class="card-body">

                   <!-- <form method="post" action="/Tickets/TakeIt/1">-->
