@model TicketManagementSystem.Models.Ticket

@{
    ViewData["Title"] = "UpdateStatus";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Create Ticket</h3>
<hr />
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header text-white" style="background-color:#ffdab9">
                    <h3 class="card-title">Create Ticket</h3>
                </div>
                <div class="card-body">
                    <form method="post" asp-controller="Tickets" asp-action="TakeIt" asp-route-id="@Model.TicketID">
                        <input type="hidden" name="id" value="@Model.TicketID">
                        <input type="checkbox" id="takeit" name="takeit" value="True">
                        <label for="takeit"> Take it</label><br>
                        <button type="submit">Handle the Task</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
