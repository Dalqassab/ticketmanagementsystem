@model TicketManagementSystem.Models.Technician

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Technician</h4>
<hr />
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header text-white" style="background-color:#ffdab9">
                    <h3 class="card-title">Register a technician</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group" style="display:none">
                            <label asp-for="TechnicianId" class="control-label"></label>
                            <input asp-for="TechnicianId" class="form-control" asp-items="ViewBag.Id" />
                            <span asp-validation-for="TechnicianId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="areaofexpertise" class="control-label"></label>
                            <input asp-for="areaofexpertise" class="form-control" />
                            <span asp-validation-for="areaofexpertise" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="yearsofexperience" class="control-label"></label>
                            <input asp-for="yearsofexperience" class="form-control" />
                            <span asp-validation-for="yearsofexperience" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary mb-5" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}